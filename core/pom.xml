<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>atanion</groupId>
  <artifactId>tobago</artifactId>
  <packaging>jar</packaging>
  <version>1.0.5-SNAPSHOT</version>

  <repositories>
    <repository>
      <id>ibiblio</id>
      <url>http://www.ibiblio.org/maven2</url>
    </repository>
    <repository>
      <id>shrek</id>
      <url>http://shrek/repository</url>
      <layout>legacy</layout>
    </repository>
  </repositories>

  <dependencies>

    <dependency>
