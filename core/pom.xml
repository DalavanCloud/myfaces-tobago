        <dependency>
          <groupId>jsf</groupId>
          <artifactId>jsf-api</artifactId>
          <version>1.1.01</version>
        </dependency>
    -->
    <dependency>
      <groupId>jstl</groupId>
      <artifactId>jstl</artifactId>
      <version>1.0</version>
      <scope>compile</scope>
    </dependency>

    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>

    <!-- XXX missing at ibiblio -->
    <dependency>
      <groupId>mockrunner</groupId>
      <artifactId>mockrunner</artifactId>
      <version>0.2.7</version>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>oro</groupId>
