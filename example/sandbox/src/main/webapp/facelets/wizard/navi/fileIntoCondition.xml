          <tfs:wizardNext wizard="${w}" label="Nächste" action="finish"/>
          <tfs:wizardLeave wizard="${w}" label="Fertig"/>
          <tfs:wizardLeave wizard="${w}" label="Cancel"/>

        </tc:panel>

      </tc:panel>

    </tfs:wizard>
    -->
  </tfs:wizardExtension>
</ui:composition>
