<f:view xmlns:f="http://java.sun.com/jsf/core"
        xmlns:tc="http://myfaces.apache.org/tobago/component">
  <tc:page>
    <f:facet name="layout">
      <tc:gridLayout/>
    </f:facet>
    <tc:out value="Hello World!"/>
    <tc:panel>
      <f:facet name="layout">
        <tc:gridLayout columns="fixed;*"/>
      </f:facet>
      <tc:label value="foo"/>
      <tc:in value="bar"/>
    </tc:panel>
  </tc:page>
</f:view>