<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE web-app
  	PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
  	"http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

  <display-name>An Addressbook Demo with Tobago by Atanion</display-name>

  <!--  workaround for a bug in Oracle AS (e.g. 10.1.2.0.0)-->
  <listener>
    <listener-class>com.atanion.tobago.webapp.TobagoServletContextListener</listener-class>
  </listener>

  <!-- servlet -->

  <servlet>
    <servlet-name>FacesServlet</servlet-name>
    <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <!-- workaround for a bug in Bea Weblogic 8.1 SP 2 and older -->
  <servlet>
    <servlet-name>WeblogicWorkaroundServlet</servlet-name>
    <servlet-class>com.atanion.tobago.webapp.WeblogicWorkaroundServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>FacesServlet</servlet-name>
    <url-pattern>/faces/*</url-pattern>
  </servlet-mapping>

  <!-- Welcome File List -->

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

</web-app>
