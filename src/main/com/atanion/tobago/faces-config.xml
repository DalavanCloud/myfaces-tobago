<?xml version="1.0"?>

<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.1//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_1.dtd">

<faces-config>

  <application>
    <default-render-kit-id>
      tobago
    </default-render-kit-id>
    <view-handler>
      com.atanion.tobago.application.ViewHandlerImpl
    </view-handler>
    <variable-resolver>
      com.atanion.tobago.el.VariableResolverImpl
    </variable-resolver>
  </application>

  <lifecycle>
    <phase-listener>
      com.atanion.tobago.event.ClientPropertiesPhaseListener
    </phase-listener>
  </lifecycle>

  <component>
    <component-type>javax.faces.Input</component-type>
    <component-class>com.atanion.tobago.component.UIInput</component-class>
  </component>
  <component>
    <component-type>javax.faces.Form</component-type>
    <component-class>com.atanion.tobago.component.UIForm</component-class>
  </component>
  <component>
    <component-type>javax.faces.SelectMany</component-type>
    <component-class>com.atanion.tobago.component.UISelectMany</component-class>
  </component>
  <component>
    <component-type>com.atanion.tobago.Data</component-type>
    <component-class>com.atanion.tobago.component.UIData</component-class>
  </component>
  <component>
    <component-type>com.atanion.tobago.ColumnSelector</component-type>
    <component-class>com.atanion.tobago.component.UIColumnSelector</component-class>
  </component>
  <component>
    <component-type>com.atanion.tobago.GridLayout</component-type>
    <component-class>com.atanion.tobago.component.UIGridLayout</component-class>
  </component>
  <component>
    <component-type>com.atanion.tobago.Page</component-type>
    <component-class>com.atanion.tobago.component.UIPage</component-class>
  </component>
  <component>
    <component-type>com.atanion.tobago.TabGroup</component-type>
    <component-class>com.atanion.tobago.component.UITabGroup</component-class>
  </component>
  <component>
    <component-type>com.atanion.tobago.Tree</component-type>
    <component-class>com.atanion.tobago.component.UITree</component-class>
  </component>

  <converter>
    <converter-id>com.atanion.tobago.Duration</converter-id>
    <converter-class>com.atanion.tobago.convert.DurationConverter</converter-class>
  </converter>
  <converter>
    <converter-for-class>com.atanion.tobago.context.Theme</converter-for-class>
    <converter-class>com.atanion.tobago.convert.ThemeConverter</converter-class>
  </converter>
  <converter>
    <converter-for-class>java.util.Locale</converter-for-class>
    <converter-class>com.atanion.tobago.convert.LocaleConverter</converter-class>
  </converter>

  <render-kit>
    <render-kit-id>tobago</render-kit-id>
    <render-kit-class>com.atanion.tobago.renderkit.TobagoRenderKit</render-kit-class>
  </render-kit>

</faces-config>
