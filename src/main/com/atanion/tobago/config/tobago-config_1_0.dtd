<!ENTITY % Boolean "(true|false|yes|no)">

<!ELEMENT tobago-config (theme*, mapping-rule*)>

<!ELEMENT theme (name, display-name?, fallback?)>
<!ATTLIST theme default %Boolean; #IMPLIED>

<!ELEMENT name (#PCDATA)>
<!ELEMENT display-name (#PCDATA)>
<!ELEMENT fallback (#PCDATA)>

<!ELEMENT mapping-rule (request-uri, forward-uri, attribute*)>
<!ELEMENT request-uri (#PCDATA)>
<!ELEMENT forward-uri (#PCDATA)>

<!ELEMENT attribute (key, value)>
<!ELEMENT key (#PCDATA)>
<!ELEMENT value (#PCDATA)>
