<ui:composition xmlns:c="http://java.sun.com/jstl/core"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:tfs="http://myfaces.apache.org/tobago/facelet-sandbox">
	
	<c:if test="${empty showContent}">
		<c:set var="showContent" value="true" />
	</c:if>
	<c:set var="replaceContent" value="true" />
	<c:if test="${empty contentDetailSource}" >
		<c:set var="replaceContent" value="false" />
	</c:if>
	
	<c:if test="${empty showNavigation}">
		<c:set var="showNavigation" value="true" />
	</c:if>
	<c:set var="replaceNavigation" value="true" />
	<c:if test="${empty navigationDetailSource}" >
		<c:set var="replaceNavigation" value="false" />
	</c:if>
	
	<!-- detail view area -->
	<tc:panel>
		<f:facet name="layout">
			<tc:gridLayout rows="*;fixed" />
		</f:facet>
		
		<!-- content area -->
		<c:choose>
			<c:when test="${showContent}">
				<!-- content -->
				<ui:include src="${contentDetailSource}" />
			</c:when>
			<c:otherwise>
				<tc:cell />
			</c:otherwise>
		</c:choose>
		
		<!-- navigation area -->
		<c:choose>
			<c:when test="${showNavigation}">
				<c:choose>
					<c:when test="${replaceNavigation}">
						<ui:include src="${navigationDetailSource}" />
					</c:when>
					<c:otherwise>
						<!-- default navigation -->
						<tc:panel>
							<f:facet name="layout">
								<tc:gridLayout columns="*;fixed" />
							</f:facet>
							
							<tc:cell />
							<tc:button action="${controller.saveItem}"
								label="Sichern"
								tip="Datensatz sichern" />
							<tc:button action="${controller.cancelItem}"
								label="Abbrechen"
								tip="Bearbeitung abbrechen" />
						</tc:panel>
					</c:otherwise>
				</c:choose>
			</c:when>
			<c:otherwise>
				<tc:cell />
			</c:otherwise>
		</c:choose>
				
	</tc:panel>

	
</ui:composition>
