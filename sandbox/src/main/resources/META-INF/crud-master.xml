<ui:composition xmlns:c="http://java.sun.com/jstl/core"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:tc="http://myfaces.apache.org/tobago/component"
	xmlns:tx="http://myfaces.apache.org/tobago/extension"
	xmlns:tfs="http://myfaces.apache.org/tobago/facelet-sandbox">
	
	<c:if test="${empty showFilter}">
		<c:set var="showFilter" value="true" />
	</c:if>
	<c:set var="replaceFilter" value="true" />
	<c:if test="${empty filterSource}" >
		<c:set var="replaceFilter" value="false" />
	</c:if>
	
	<c:if test="${empty showContent}">
		<c:set var="showContent" value="true" />
	</c:if>
	
	<c:if test="${empty showNavigation}">
		<c:set var="showNavigation" value="false" />
	</c:if>
	<c:set var="replaceNavigation" value="true" />
	<c:if test="${empty navigationMasterSource}" >
		<c:set var="replaceNavigation" value="false" />
	</c:if>
	
	<!-- master view area -->
	<tc:panel>
		<f:facet name="layout">
			<tc:gridLayout rows="fixed;*;fixed" />
		</f:facet>
		
		<!-- search/filter -->
		<c:choose>
			<c:when test="${showFilter}">
				<c:choose>
					<c:when test="${replaceFilter}">
						<ui:include src="${filterSource}" />
					</c:when>
					<c:otherwise>
						<tc:panel>
							<f:facet name="layout">
								<tc:gridLayout columns="fixed;fixed;*" />
							</f:facet>
							<tx:in label="Filter"
								value="${controller.filterExpression}"
								tip="Hinweis zur Nutzung des Filters" />
							<tc:button action="${controller.filter}"
								label="Filtern" />
							<tc:cell />
						</tc:panel>
					</c:otherwise>
				</c:choose>
			</c:when>
			<c:otherwise>
				<tc:cell />
			</c:otherwise>
		</c:choose>
		
		<!-- content area -->
		<c:choose>
			<c:when test="${showContent}">
				<!-- content -->
				<ui:include src="${contentMasterSource}" />
			</c:when>
			<c:otherwise>
				<tc:cell />
			</c:otherwise>
		</c:choose>
		
		<!-- navigation area -->
		<c:choose>
			<c:when test="${showNavigation}">
				<c:choose>
					<c:when test="${replaceNavigation}">
						<ui:include src="${navigationMasterSource}" />
					</c:when>
					<c:otherwise>
						<!-- default navigation -->
						<tc:panel>
							<f:facet name="layout">
								<tc:gridLayout colums="fixed;*;fixed;fixed;fixed" />
							</f:facet>
							<tc:button
								action="${controller.createItem}"
								disabled="${!controller.initialized}" label="Neues Element" />
							<tc:cell />
							<tc:button
								action="${controller.showItem}"
								disabled="${!controller.initialized}" label="Element anzeigen" />
							<tc:button
								action="${controller.editItem}" label="Element editieren"
								disabled="${!controller.initialized}" />
							<tc:button
								action="${controller.deleteItem}"
								disabled="${!controller.initialized}"
								label="Element löschen">
								<f:facet name="confirmation">
									<tc:out
										value="Möchten Sie die ausgewählten Items wirklich löschen?" />
								</f:facet>
							</tc:button>							
						</tc:panel>
					</c:otherwise>
				</c:choose>
			</c:when>
			<c:otherwise>
				<tc:cell />
			</c:otherwise>
		</c:choose>
				
	</tc:panel>

</ui:composition>
