<ui:composition xmlns:f="http://java.sun.com/jsf/core"
                xmlns:c="http://java.sun.com/jsp/jstl/core"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:tc="http://myfaces.apache.org/tobago/component"
                xmlns:tf="http://myfaces.apache.org/tobago/facelet-extension">

  <c:set var="columns" value=""/>
  <c:forEach var="i" begin="0" end="${wizard.size}" step="1">
    <c:set var="columns" value="auto;${columns}"/>
  </c:forEach>
  <c:set var="columns" value="${columns}*;50px"/>

  <tc:panel>

    <f:facet name="layout">
      <tc:gridLayout rows="auto" columns="${columns}"/>
    </f:facet>

    <c:forEach items="${wizard.course}" var="step">
      <tc:button label="${step.title}">
        <tc:attribute name="action" value="${step.outcome}" mode="actionFromValue"/>
        <tc:attribute name="actionListener" value="${wizard.gotoStep}" mode="actionListener"/>
        <tc:attribute name="step" value="${step.index}"/>
      </tc:button>
    </c:forEach>

    <tc:cell/>
    <tc:out value="${wizard.index}/${wizard.size}"/>

  </tc:panel>
</ui:composition>
