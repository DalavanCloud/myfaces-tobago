<project name="tobago-all" default="deploy-snapshot">



  <target name="deploy-snapshot">

    <ant target="deploy-snapshot" dir="tool/apt" />
    <ant target="deploy-snapshot" dir="core" />
    <ant target="deploy-snapshot" dir="example/addressbook" />
    <ant target="deploy-snapshot" dir="example/demo" />
    <ant target="deploy-snapshot" dir="theme/standard" />
    <ant target="deploy-snapshot" dir="theme/scarborough" />
    <ant target="deploy-snapshot" dir="theme/speyside" />

  </target>

  <target name="clean-all">

    <ant target="clean-all" dir="tool/apt" />
    <ant target="clean-all" dir="core" />
    <ant target="clean-all" dir="example/addressbook" />
    <ant target="clean-all" dir="example/demo" />
    <ant target="clean-all" dir="theme/standard" />
    <ant target="clean-all" dir="theme/scarborough" />
    <ant target="clean-all" dir="theme/speyside" />

  </target>

  <target name="deploy-snapshot-global">

    <ant target="deploy-snapshot-global" dir="tool/apt" />
    <ant target="deploy-snapshot-global" dir="core" />
    <ant target="deploy-snapshot-global" dir="example/addressbook" />
    <ant target="deploy-snapshot-global" dir="example/demo" />
    <ant target="deploy-snapshot-global" dir="theme/standard" />
    <ant target="deploy-snapshot-global" dir="theme/scarborough" />
    <ant target="deploy-snapshot-global" dir="theme/speyside" />

  </target>

  <target name="test">

    <ant target="test" dir="tool/apt" />
    <ant target="test" dir="core" />
    <ant target="test" dir="example/addressbook" />
    <ant target="test" dir="example/demo" />
    <!--<ant target="test" dir="theme/standard" />-->
    <!--<ant target="test" dir="theme/scarborough" />-->
    <!--<ant target="test" dir="theme/speyside" />-->

  </target>


  <target name="masterbuild" depends="reportdir, checkout, test, deploy-snapshot, deploy-build" />
  <target name="cleanbuild" depends="clean-all, masterbuild"/>
  <target name="reportdir">
    <mkdir dir="build/report"/>
    <mkdir dir="tool/apt/build/report"/>
    <mkdir dir="core/build/report"/>
    <mkdir dir="example/addressbook/build/report"/>
    <mkdir dir="example/demo/build/report"/>
  </target>
  <target name="checkout">
    <exec executable="svn">
      <arg value="up"/>
    </exec>
  </target>
  <target name="deploy-build">
    <ant target="war" dir="example/addressbook"/>
    <ant target="war" dir="example/demo"/>
  </target>


</project>
