<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE dialogs PUBLIC
    "-//Apache Software Foundation//DTD Shale Dialog Configuration 1.0//EN"
    "http://struts.apache.org/dtds/shale-dialog-config_1_0.dtd">
<dialogs>

  <!-- Log On / Create Profile Dialog -->
  <dialog name="Adresslist"
          start="List View">

    <transition outcome="list"
                target="List View"/>
    
    <action name="Create Address"
            method="#{controller.createAddress}">
      <transition outcome="editor"
                  target="Address Editor"/>
    </action>

    <action name="Edit Address"
            method="#{controller.editAddress}">
      <transition outcome="editor"
                  target="Address Editor"/>
    </action>

    <action name="Delete Address"
            method="#{controller.deleteAddresses}">
    </action>

    <view name="List View"
          viewId="/list.jsp">
      <transition outcome="create"
                  target="Create Address"/>
      <transition outcome="edit"
                  target="Edit Address"/>
      <transition outcome="delete"
                  target="Delete Address"/>
    </view>

    <subdialog name="Address Editor"
               dialogName="Address Editor View">
      <transition outcome="list"
                  target="List View"/>
      <transition outcome="cancel"
                  target="List View"/>
    </subdialog>

  </dialog>

  <!-- Edit Address Dialog -->
  <dialog name="Address Editor View"
          start="View">

    <view name="View"
          viewId="/editor.jsp">
      <transition outcome="cancel"
                  target="Exit"/>
      <transition outcome="store"
                  target="Store"/>
    </view>

    <action name="Store"
            method="#{controller.storeAddress}">
      <transition outcome="list"
                  target="Exit"/>
    </action>

    <end name="Exit"/>

  </dialog>

</dialogs>
