<f:view xmlns:f="http://java.sun.com/jsf/core"
       xmlns:ui="http://java.sun.com/jsf/facelets"
       xmlns:tc="http://myfaces.apache.org/tobago/component"
       xmlns:tx="http://myfaces.apache.org/tobago/facelet-extension">
  <tc:page label="Tobago Sheet Facelets" width="640px" height="300px" >
    <f:facet name="layout">
      <tc:gridLayout margin="10px" rows="1*;2*;2*"/>
    </f:facet>
    <tc:messages />
    <tc:form>
      <tc:box label="Busqueda de usuarios" >
        <f:facet name="layout">
          <tc:gridLayout rows="fixed;*" columns="1*;1*"  />
        </f:facet>
        <f:facet name="toolBar">
          <tc:toolBar>
            <tc:button label="Buscar" defaultCommand="true" />
            <tc:button label="Agregar" />
          </tc:toolBar>
        </f:facet>
        <tx:selectOneChoice value="#{messageBackingBean.type}" label="Tipo Usuario">
          <f:selectItems value="#{messageBackingBean.selectionItems}"/>
        </tx:selectOneChoice>

        <tx:in label="Usuario" />
        <tc:cell spanX="2" >
          <tc:sheet columns="1*;1*;1*" value="#{messageBackingBean.list}"
              var="emp" showPageRange="center"
              showRowRange="left" rows="5" >
            <tc:column label="Nombre" sortable="true" >
              <tc:out value="#{emp.name} #{emp.surname}" />
            </tc:column>
            <tc:column label="Date" sortable="true" >
              <tc:out value="#{emp.date}" >
                <f:convertDateTime pattern="yyyy/MM/dd"/>
              </tc:out>  
            </tc:column>
            <tc:column label="Double" sortable="true">
              <tc:out value="#{emp.double}">
                <f:convertNumber minFractionDigits="2" maxFractionDigits="3" />
              </tc:out>
            </tc:column>
          </tc:sheet>
        </tc:cell>
      </tc:box>
    </tc:form>
  </tc:page>
</f:view>